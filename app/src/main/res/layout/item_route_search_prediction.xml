<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <jackwtat.simplembta.views.ServiceAlertsIndicatorView
        android:id="@+id/service_alerts_indicator_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_alerts_indicator_view"
        android:background="@color/cardview_light_background"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/left_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/enroute_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_enroute_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_header_text_size" />
        </LinearLayout>


        <TextView
            android:id="@+id/destination_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:textSize="@dimen/small_header_text_size"
            tools:text="Malden Center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textSize="@dimen/small_header_text_size"
                    android:textStyle="bold"
                    tools:text="99:99" />

                <TextView
                    android:id="@+id/minute_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/body_text_size"
                    tools:text="pm" />
            </LinearLayout>

            <TextView
                android:id="@+id/live_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/live_border"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/live"
                android:textColor="@color/livePrediction"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drop_off_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/dropoff_background"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/drop_off"
                android:textColor="@color/HighlightedText"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/no_predictions_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/no_predictions_this_stop"
        android:textSize="@dimen/small_header_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <View
        android:id="@+id/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:id="@+id/on_click_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone" />

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/main_content"
        android:background="#CCCCCC" />
</RelativeLayout>