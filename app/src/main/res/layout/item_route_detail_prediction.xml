<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:background="@color/cardview_light_background"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="75sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:textSize="@dimen/small_header_text_size"
                android:textStyle="bold"
                tools:text="99:99" />

            <TextView
                android:id="@+id/minute_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold"
                tools:text="pm" />
        </LinearLayout>

        <TextView
            android:id="@+id/live_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_border"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/live"
            android:textSize="@dimen/body_text_size"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/destination_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_header_text_size"
            android:textStyle="bold"
            tools:text="Malden Center" />

        <TextView
            android:id="@+id/drop_off_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_border"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/drop_off"
            android:textSize="@dimen/body_text_size"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>