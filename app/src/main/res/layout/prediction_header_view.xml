<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/error_message_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/small_header_text_size"
        android:textStyle="bold"
        tools:text="Salem St @ Sprague St" />

    <LinearLayout
        android:id="@+id/secondary_colors_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/secondary_color_0"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#FF0000"
            android:visibility="gone" />

        <View
            android:id="@+id/secondary_color_1"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#00FF00"
            android:visibility="gone" />

        <View
            android:id="@+id/secondary_color_2"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#0000FF"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>