<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:id="@+id/prediction_left_side"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/route_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/route_background"
            android:gravity="center_horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="106" />

        <TextView
            android:id="@+id/alert_indicator_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:text="@string/service_alert_urgent"
            android:textColor="@color/ServiceAlert_Urgent"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/prediction_right_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/primary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time_text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="50 min" />

            <TextView
                android:id="@+id/destination_text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@id/time_text_view_1"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Malden Center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/time_text_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="75 min" />

            <TextView
                android:id="@+id/destination_text_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@id/time_text_view_2"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Wellington" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tertiary_and_stop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <RelativeLayout
                android:id="@+id/tertiary_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/time_text_view_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textSize="16sp"
                    tools:text="100 min" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stop_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tertiary_layout">

                <TextView
                    android:id="@+id/stop_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="16sp"
                    tools:text="Salem St @ Sprague St" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>