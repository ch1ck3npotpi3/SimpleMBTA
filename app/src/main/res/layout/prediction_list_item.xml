<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:id="@+id/prediction_left_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/route_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/route_background"
            android:gravity="center_horizontal"
            android:minWidth="65dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="106" />

        <TextView
            android:id="@+id/alert_indicator_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/route_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="@string/service_alert_advisory"
            android:textColor="@color/ServiceAlert_Urgent"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/prediction_right_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/primary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/destination_text_view_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Malden Center" />

                <TextView
                    android:id="@+id/train_text_view_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="(Train 295)" />
            </LinearLayout>

            <TextView
                android:id="@+id/time_text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="50," />

            <TextView
                android:id="@+id/time_text_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:text="@string/min"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="100 min" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/destination_text_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Malden Center" />

                <TextView
                    android:id="@+id/train_text_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="(Train 295)" />
            </LinearLayout>

            <TextView
                android:id="@+id/time_text_view_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="50," />

            <TextView
                android:id="@+id/time_text_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="100 min" />
        </LinearLayout>

        <TextView
            android:id="@+id/stop_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            tools:text="Salem St @ Sprague St" />
    </LinearLayout>
</LinearLayout>