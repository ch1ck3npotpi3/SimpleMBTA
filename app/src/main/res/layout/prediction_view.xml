<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/predicted_times_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <TextView
            android:id="@+id/destination_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:textSize="@dimen/small_header"
            android:textStyle="bold"
            tools:text="Malden Center" />

        <TextView
            android:id="@+id/first_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textSize="@dimen/small_header"
            android:textStyle="bold"
            tools:text="50," />

        <TextView
            android:id="@+id/second_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:text="@string/min"
            android:textSize="@dimen/body_text"
            android:textStyle="bold"
            tools:text="100 min" />
    </LinearLayout>

    <TextView
        android:id="@+id/track_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/body_text"
        android:textStyle="bold"
        tools:text="Track 11" />
</LinearLayout>